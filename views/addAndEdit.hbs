<div class="card">
  <div class="card-header bg-info">
    <h3 align='center'> {{title}} </h3>
  </div>
  <div class="card-body bg-light">
    <form action="/tokobuah/add" method="POST" autocomplete="off">
    <div class="container-fluid">
      <input type="hidden" name="_id" value="{{listBuah._id}}">
        <div class="row">
            <div class="col-md-1 "><label for="">Buah </label></div>
            <div class="col-md-9 ml-auto"><input type="text" class="form-control" name="buah" placeholder="Nama buah" value="{{listBuah.buah}}"></div>
        </div>
        <br/>
        <div class="row">
            <div class="col-md-1 "><label for="">harga </label></div>
            <div class="col-md-9 ml-auto"><input type="text" class="form-control" name="harga" placeholder="Harga buah" value="{{listBuah.harga}}"></div>
        </div>
        <br/>
        <div class="row">
            <div class="col-md-1 "><label for="">Satuan </label></div>
            <div class="col-md-9 ml-auto"><input type="text" class="form-control" name="satuan" placeholder="Harha dalam Satuan" value="{{listBuah.satuan}}"></div>
        </div>
        <br/>
        <div class="row">
            <div class="col-md-1 "><label for="">Deskripsi </label></div>
            <div class="col-md-9 ml-auto"><textarea class="form-control"  name="deskripsi" id="deskripsi" placeholder="Deskripsikan buah...">{{listBuah.deskripsi}}</textarea></div>
        </div>
        <br/>
        <div class="" align="right">
            <button type="submit" class="btn btn-info"><i class="fa fa-save"></i> submit</button>
        </div>
    </div>        
    </form>
  </div>
  <div class="card-foother">

  </div>
</div>